<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <ImageView
        android:id="@+id/trend_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/trending_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:text="ssss"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/trend_icon"
        app:layout_constraintStart_toEndOf="@+id/trend_icon"
        app:layout_constraintTop_toTopOf="@+id/trend_icon" />

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="5dp"
        android:background="#e1e3e1"
        app:layout_constraintTop_toBottomOf="@id/trend_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
