<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/Theme.Material3.Light">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#faf8ff"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_home_on_background_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edt_search" />

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_url_background"
            android:drawableStart="@drawable/page_info_24px"
            android:drawablePadding="10dp"
            android:hint="@string/search"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toStartOf="@+id/iv_add"
            app:layout_constraintStart_toEndOf="@+id/iv_home"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="10dp"
            android:background="#e1e3e1"
            app:layout_constraintTop_toBottomOf="@+id/edt_search" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/baseline_add_24"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search"
            app:layout_constraintEnd_toStartOf="@+id/tv_view_tab_1"
            app:layout_constraintTop_toTopOf="@+id/edt_search" />

        <TextView
            android:id="@+id/tv_view_tab_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_square_on_background_24dp"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search"
            app:layout_constraintEnd_toStartOf="@id/iv_setting"
            app:layout_constraintTop_toTopOf="@+id/edt_search" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_margin="6dp"
            android:src="@drawable/baseline_more_vert_24"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edt_search" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/arrow_left_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_search" />


        <EditText
            android:id="@+id/edt_search_2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:background="@color/transparent"
            android:drawableEnd="@drawable/google_lens_icon"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:imeOptions="actionSearch"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
            app:layout_constraintTop_toBottomOf="@+id/header_background" />

        <View
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e1e3e1"
            app:layout_constraintTop_toBottomOf="@+id/edt_search_2" />

        <ImageView
            android:id="@+id/g_voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:padding="8dp"
            android:src="@drawable/google_voice_icons"
            app:layout_constraintBottom_toBottomOf="@+id/edt_search_2"
            app:layout_constraintEnd_toEndOf="@+id/edt_search_2"
            app:layout_constraintTop_toTopOf="@+id/edt_search_2" />

        <TextView
            android:id="@+id/trend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#A09F9F"
            android:textStyle="bold"
            android:text="Nội dung tìm kiếm thịnh hành"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_search_2" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/trend_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <androidx.constraintlayout.widget.ConstraintLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->
    <!--        -->
    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->


</LinearLayout>
